<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="expandedTitleTextAppearance">@style/TextAppearance.AppTheme.Headline4</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.AppTheme.Headline6</item>
        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">#ffffff</item>
        <item name="subtitleTextColor">#ffffff</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearance.AppTheme.Toolbar" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>